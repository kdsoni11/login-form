<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:padding="10dp"
        android:background="@drawable/round_button_red_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/round_button_white_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/red"
            android:fontFamily="sans-serif-thin"
            android:text="First Name"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/firstNameEditText"
            android:padding="5dp"
            android:inputType="text"
            android:hint="First Name"
            android:background="@drawable/round_layout_grey_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-thin"
            android:text="Last Name"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/lastNameEditText"
            android:padding="5dp"
            android:hint="Last Name"
            android:inputType="text"
            android:background="@drawable/round_layout_grey_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-thin"
            android:text="Email Id"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/emailIdEditText"
            android:padding="5dp"
            android:hint="Email Id"
            android:inputType="text"
            android:background="@drawable/round_layout_grey_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@color/red"
            android:fontFamily="sans-serif-thin"
            android:text="Mobile No"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/mobileNoEditText"
            android:padding="5dp"
            android:hint="Mobile No"
            android:background="@drawable/round_layout_grey_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancelBtn"
                android:textColor="@color/black"
                android:text="Cancel"
                android:background="@color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/submitBtn"
                android:textColor="@color/white"
                android:text="Submit"
                android:background="@drawable/oval_button_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>